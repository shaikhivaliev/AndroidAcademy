<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_detail_speaker">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_for_report_activity">


        <FrameLayout
            android:id="@+id/cv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">


            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    tools:ignore="contentDescription" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|bottom"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_for_national_flag"
                    android:padding="2dp"
                    android:src="@mipmap/ic_launcher"
                    tools:ignore="contentDescription" />
            </android.support.v7.widget.CardView>


        </FrameLayout>

        <TextView
            android:id="@+id/tv_speaker_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@+id/cv_avatar"
            android:lines="2"
            android:textAllCaps="true"
            tools:text="Name name"/>

        <TextView
            android:id="@+id/tv_speaker_detail_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_speaker_detail_name"
            android:layout_alignStart="@+id/tv_speaker_detail_name"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_detail_speaker"
            tools:text="Name name"/>

        <TextView
            android:id="@+id/tv_speaker_detail_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_speaker_detail_short_description"
            android:layout_alignStart="@+id/tv_speaker_detail_short_description"
            tools:text="Origin"/>

        <ImageView
            android:id="@+id/iv_connect_with_telegram"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv_speaker_detail_origin"
            android:layout_alignStart="@+id/tv_speaker_detail_origin"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_launcher"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/iv_connect_with_twitter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv_speaker_detail_origin"
            android:layout_alignTop="@+id/iv_connect_with_telegram"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/iv_connect_with_telegram"
            android:src="@mipmap/ic_launcher"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/tv_speaker_detail_full_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_connect_with_telegram"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            tools:text="@tools:sample/lorem"/>

        <ImageView
            android:id="@+id/iv_speaker_detail_background"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/tv_speaker_detail_full_description"
            android:background="@color/text_event_label" />

        <TextView
            android:id="@+id/tv_speaker_detail_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_speaker_detail_full_description"
            android:layout_alignStart="@+id/tv_speaker_detail_full_description"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="Event name" />

        <TextView
            android:id="@+id/tv_speaker_detail_event_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_speaker_detail_event_name"
            android:layout_alignStart="@+id/tv_speaker_detail_event_name"
            tools:text="Event place" />

        <include
            android:id="@+id/speaker_detail_tag"
            layout="@layout/view_report_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_speaker_detail_event_place"
            android:layout_alignStart="@+id/tv_speaker_detail_event_place"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_speaker_detail_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/speaker_detail_tag"
            android:layout_alignStart="@+id/speaker_detail_tag"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="Time" />

        <TextView
            android:id="@+id/tv_speaker_detail_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/speaker_detail_tag"
            android:layout_alignBaseline="@+id/tv_speaker_detail_event_time"
            android:layout_toEndOf="@+id/speaker_detail_tag"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/text_detail_speaker"
            tools:text="Date" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_speaker_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_speaker_detail_background"
            android:layout_alignBottom="@+id/iv_speaker_detail_background"
            android:layout_margin="8dp"
            android:src="@drawable/ic_close"
            app:backgroundTint="@android:color/white" />

    </RelativeLayout>

</FrameLayout>
